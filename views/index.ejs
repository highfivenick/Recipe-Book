<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe Book</title>
  <link rel="stylesheet" href="reset.css">
  <link rel="stylesheet" href="normalize.css">
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  
  <section>
    <h1>Recipe Book</h1>
    <h2>Record your recipes and mark your favorites</h2>

    <form action="/messages" method="POST">
      <input type="text" placeholder="dish" name="name">
      <input type="text" placeholder="recipe" name="msg">
      <button type="submit">Submit</button>
    </form>

    <h3>Recipes</h3>
    <ul class="messages">
    <% for(var i=0; i<messages.length; i++) {%>
      <li class="message <%= messages[i].bookmarked ? 'gold' : '' %>">
        <span class="bold" ><%= messages[i].name %></span>
        <p><%= messages[i].msg %></p>
        <span><%= messages[i].thumbUp %></span>
        
        <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
        <span><i class="fa fa-star" aria-hidden="true"></i></span>
       
        <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      </li>
    <% } %>
    </ul>
  </section>


  <script src="main.js"></script>

</body>
</html>
